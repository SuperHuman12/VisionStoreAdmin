<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView card_view:cardCornerRadius="10dp"
        card_view:cardUseCompatPadding="true"
        android:id="@+id/android_card_view_example"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="8dp"
        >
        <TextView
            android:id="@+id/txt_category"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Lenses"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:textColor="@color/textColorTwo"
            android:textSize="@dimen/text_size_18sp"
            />
        <Button
            android:layout_marginRight="@dimen/margin_10dp"
            android:id="@+id/btn_seeall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See All"
            android:textColor="@color/textColorTwo"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/buttonSee"/>
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/textColorTwo"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_below="@+id/btn_seeall"></View>
        <GridView
            android:id="@+id/product_gridview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:numColumns="2"
            android:layout_below="@id/view"
            android:scrollbars="none"
            ></GridView>
        <RelativeLayout
            android:id="@+id/empty_view_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/product_gridview"
            >
            <TextView
                android:padding="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Nothing Here"/>
        </RelativeLayout>
</RelativeLayout>

    </android.support.v7.widget.CardView>
    </RelativeLayout>

